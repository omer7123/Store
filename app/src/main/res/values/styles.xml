<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="top_tv_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/margin_30</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:textColor">@color/label_black_100</item>
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">@dimen/margin_1</item>
        <item name="android:background">@color/label_black_30</item>
    </style>

    <style name="et_signup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_56</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">30dp</item>
        <item name="android:drawablePadding">@dimen/margin_20</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>

    <style name="btn_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_56</item>
        <item name="android:background">@drawable/bg_btn_inactive</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/label_black_30</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_56</item>
        <item name="android:background">@drawable/bg_btn_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fab_fb_ggl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">@dimen/margin_0</item>
    </style>

    <style name="instruction_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/margin_30</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14</item>
    </style>

    <style name="tv_recycler_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/label_black_100</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_clickable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">all</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/hyperlink</item>
    </style>

    <style name="tv_profile_types">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/label_black_100</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/margin_341"
    android:layout_height="@dimen/margin_330"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/margin_89"
    tools:context=".ui.basket_fragment.BasketPurchasedFragment">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/margin_84"
            android:layout_height="@dimen/margin_84"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_66"
            android:src="@drawable/ic_check_yellow"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_check"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_47"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:text="@string/check_email"
            android:textSize="@dimen/size_16" />


        <Button
            android:id="@+id/btn"
            style="@style/btn_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginBottom="@dimen/margin_12"
            android:background="@drawable/bg_btn_active"
            android:text="Хорошо" />
    </RelativeLayout>
